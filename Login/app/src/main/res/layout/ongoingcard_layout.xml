<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/ongoingtriproot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">


            <TextView
                android:id="@+id/labeltxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="TripID:"/>

            <TextView
                android:id="@+id/tripidtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:text="TripID:"
                app:layout_constraintLeft_toRightOf="@id/labeltxt1"
                />

            <TextView
                android:id="@+id/labeltxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Trip Type:"
                app:layout_constraintTop_toBottomOf="@id/labeltxt1"/>

            <TextView
                android:id="@+id/triptypetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:text="TripID:"
                app:layout_constraintLeft_toRightOf="@id/labeltxt2"
                app:layout_constraintTop_toBottomOf="@id/labeltxt1"
                />

            <TextView
                android:id="@+id/labeltxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Date:"
                app:layout_constraintTop_toBottomOf="@id/labeltxt2"
                />

            <TextView
                android:id="@+id/datetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:paddingLeft="10dp"
                android:text="TripID:"
                app:layout_constraintLeft_toRightOf="@id/labeltxt3"
                app:layout_constraintTop_toBottomOf="@id/labeltxt2"
                />


            <ImageView
                android:id="@+id/imageedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <android.support.v7.widget.CardView
                android:id="@+id/editscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/removetrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Remove Trip"
                        android:textSize="20sp"

                        />
                    <TextView
                        android:id="@+id/changedatetrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Date"
                        android:padding="10dp"
                        android:textSize="20sp"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>